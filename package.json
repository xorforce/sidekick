{
  "name": "sidekick",
  "version": "0.1.0",
  "description": "A quirky CLI for building, running, and testing iOS/macOS apps",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sidekick": "./dist/bin/sidekick.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/bin/sidekick.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "ios",
    "macos",
    "xcode",
    "cli",
    "build",
    "test"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^12.0.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "execa": "^9.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
